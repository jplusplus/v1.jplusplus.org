extends layout
block body
    include layouts/menu
    #main.container

        if locals.about && about.lang != session.language        
            .alert.alert-info.top30.left50.right50            
                =_("This page is only available in English. We're working on translating it in your language.")  

        #portfolio
            ul.unstyled.js-wrapper.row
                - if(posts && typeof posts !== "array")
                    - posts.forEach(function(item) {
                        if item
                            li.js-card
                                .view
                                    .wrapper
                                        img(src=item.thumbnail)
                                    .legend
                                        h2.slabtexted.hidden-phone !{item.title}
                                        h2.visible-phone.tl !{item.title}
                                        .btn.btn-primary.btn=_("See more")
                                .about      
                                    .row    
                                    
                                        .visible-desktop
                                            a.back
                                                i.icon-circle-arrow-left.icon-white
                                                =_("Back")
                                        
                                            h3 !{item.title}
                                            article !{item.content}

                                                - if(item.tags.length > 0)
                                                    ul.tags.unstyled
                                                        - item.tags.forEach(function(tag) {
                                                            li=tag
                                                        - })            

                                            - if(item.siteurl)
                                                a(href=item.siteurl, rel='external').siteurl
                                                    i.icon-globe.icon-white
                                                    =item.siteurl       

                                        .hidden-desktop
                                            a.back
                                                i.icon-circle-arrow-left.icon-white
                                                =_("Back")
                                        
                                            h3 !{item.title}
                                            article !{item.content}

                                            - if(item.siteurl)
                                                a(href=item.siteurl, rel='external').siteurl
                                                    i.icon-globe.icon-white
                                                    =item.siteurl                           
                    - })

        - if(typeof posts !== "array")
            ul#portfolio-nav.unstyled
                - posts.forEach(function(item) {
                    if item
                        li.right10
                - })    

        hr.soften

        ul#team.row.no-bullet.top40
            li.span2.offset4
                .pp
                    img(src="/img/team/mirko.png")
                .link
                    a(href="https://twitter.com/mirkolorenz", rel='external')
                        img(src="/img/twitter-bird-dark-bgs.png").left05
                h3 Mirko<br />Lorenz 
                p!=_("CEO &bullet; Datajournalist, Information&nbsp;Architect, Trainer")
            li.span2
                .pp
                    img(src="/img/team/cosmin.png")
                .link
                    a(href="https://twitter.com/pushthings4ward", rel='external')
                        img(src="/img/twitter-bird-dark-bgs.png").left05
                h3 Cosmin<br />Cabulea 
                p=_("Datajournalist, Developer, Trainer")

        hr.soften
        
        .container
            if about
                #about
                   .row
                       .span10.offset1
                            h2 !{about.title}
                            article !{about.content}


